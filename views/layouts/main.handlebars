<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registry</title>
    <link rel="stylesheet" href="/css/jass.css" />
    {{!Add in link to bootstrap when ready }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

  </head>

  <body>
    <header class="display-flex justify-space-between align-center p-2">
      {{! Add icon either before or after nav  }}
      <nav class="col-12 text-center">
        <button
          onclick="location.href='/'"
          class="btn btn-primary"
          id="home"
        >Home</button>
        <button
          onclick="location.href='/browse'"
          class="btn btn-primary"
          id="libraries"
        >Browse Libraries</button>
        <button
          onclick="location.href='/search'"
          class="btn btn-primary"
          id="search"
        >Search</button>
        {{#if logged_in}}
          <button class="btn btn-primary" id="logout">Logout</button>
          <button
            onclick="location.href='/dashboard'"
            class="btn btn-primary"
            id="dashboard"
          >Dashboard</button>
        {{else}}
          <button onclick="location.href='/login'" class="btn btn-primary" id="login">Login</button>
        {{/if}}
        {{!-- {{>search}} --}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>
    <footer class="text-center">
      &copy; 2022 - Miguel Escobar, Andrew Moody, & Natalie Triffo.
    </footer>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{!-- {{else}}
      <script src="/js/login.js"></script> --}}
    {{/if}}
    {{!-- <script src="/js/main.js"></script> --}}
  </body>
</html>