<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fully Booked</title>
    <link rel="stylesheet" href="/css/jass.css"/>
    <link rel="icon" type="image/x-icon" href="/images/favicon.png">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;600&family=Comfortaa:wght@300;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="w-100" style="background-image: url('/images/background.png'); overflow-x: hidden;">
    <div style="background-image: url('/images/background.png');">
      <div style="background-color: rgba(245, 235, 215, 0.5);">
        <header
          class="sticky-top d-flex justify-content-between align-center row my-0 p-2 shadow p-3 mb-5 rounded"
          style="background-color: #A6B7BE;"
        >
          <img
            src="/images/logoNav.png"
            alt="Fully Booked Logo"
            class=""
            style="max-width: 25%; height: 100px; width: auto;"
          />
          <nav class="col text-right" style="font-family: 'Comfortaa', cursive;" role="navigation">
            <button
              onclick="location.href='/'"
              class="btn btn-outline-dark shadow"
              id="home"
              style="background-color: #F5EBD7;"
            >Home</button>
            <button
              onclick="location.href='/browse'"
              class="btn btn-outline-dark shadow"
              id="libraries"
              style="background-color: #F5EBD7;"
            >Browse Libraries</button>
            <button
              onclick="location.href='/search'"
              class="btn btn-outline-dark shadow"
              id="search"
              style="background-color: #F5EBD7;"
              s
            >Search</button>
            {{#if logged_in}}
              <button
                onclick="location.href='/dashboard'"
                class="btn btn-outline-dark shadow"
                id="dashboard"
                style="background-color: #F5EBD7;"
              >Dashboard</button>
              <button
                class="btn btn-outline-dark shadow"
                id="logout"
                style="background-color: #F5EBD7;"
              >Logout</button>
            {{else}}
              <button
                onclick="location.href='/login'"
                class="btn btn-outline-dark shadow"
                id="login"
                style="background-color: #F5EBD7;"
              >Login</button>
            {{/if}}
          </nav>
        </header>
        <main class="container container-fluid mt-5">
          {{{body}}}
        </main>
        <footer class="text-center text-dark mt-5 pb-3" style="font-family: 'Comfortaa', cursive;">
          &copy; 2022 - Miguel Escobar, Andrew Moody, & Natalie Triffo.
        </footer>
      </div>
    </div>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>