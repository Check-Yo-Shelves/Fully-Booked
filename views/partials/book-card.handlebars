<div class="card book-card rounded border m-3" style="width: 20rem;">
  <img src="{{artwork}}" class="card-img-top" alt="{{title}} Cover Art">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{author}}</h6>
    {{#if description}}
    <p class="card-text">{{description}}</p>
    {{/if}}
    {{#if logged_in}}
    <div class="card-footer">
      {{#if librarybook.checked_out}}
      <p>Book is out on loan. Please try back later.</p>
      {{else}}
      <a onclick="checkOutBook({{librarybook.id}})" class="btn btn-primary">Check Out Book</a>
      {{/if}}
    </div>
    {{/if}}
  </div>
</div>