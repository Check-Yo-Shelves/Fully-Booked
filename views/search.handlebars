<h1 class="text-center text-dark" style="font-family: 'Caveat', cursive;">Search</h1>
<div class="container row align-items-center min-vh-50 bg-dark p-2 bg-opacity-25 shadow mb-3 rounded">
  {{#if message}}
    <h4 class="text-center justify-content-center d-flex pt-2" style="font-family: 'Comfortaa', cursive;">{{message}}</h4>
  {{/if}}
  <form class="align-middle justify-content-center text-center rounded" style="font-family: 'Comfortaa', cursive;">
    <input class="d-grid gap-2 col-4 mx-auto my-3 rounded" type="text" placeholder="Search books by title or author" name="search" id="searchBar"/>
    <button class="btn btn-outline-dark shadow d-grid gap-2 col-2 mx-auto my-3 mb-5 rounded" type="submit" id="searchBtn" style="background-color: #A6B7BE;">Search</button>
  </form>
</div>
<script type="module" src="/js/search.js"></script>