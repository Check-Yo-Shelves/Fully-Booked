<form class="container create-library">
    <div class="row justify-content-center form-group">
        <div class="col-6 m-2 border rounded">
            <h3>Please include your library's information below. A 5 digit zip is required to create your library.</h3>
            <label for="exampleFormControlInput1">Library Name</label>
            <input type="text" class="form-control" id="name" placeholder="My New Library">
            <br>
            <label for="exampleFormControlInput1">Address</label>
            <input type="text" class="form-control" id="address" placeholder="123 Fake Street">
            <br>
            <label for="exampleFormControlInput1">Zip-Code</label>
            <input type="number" class="form-control" id="zipcode" placeholder="5 Digit Zip Code">
            <br>
        </div>
        <div class="col-6 m-2 border rounded">
            <button type="submit" class="create-library m-1">Create Library</button>
        </div>
    </div>
</form>

<script src="/js/newlibrary.js"></script>